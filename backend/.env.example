# Smart Competitor Finder - Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - OpenAI API Configuration
# ============================================
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Application Settings
# ============================================
APP_ENV=production
DEBUG=False
LOG_LEVEL=INFO

# ============================================
# Security
# ============================================
SECRET_KEY=your_super_secret_key_here_minimum_32_characters

# ============================================
# CORS Settings (adjust for your domain)
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# Scraping Configuration (100% Self-Hosted)
# ============================================
# Timeouts (seconds)
BROWSER_POOL_TIMEOUT=15
ADVANCED_SCRAPER_TIMEOUT=20
BASIC_HTTP_TIMEOUT=5
BULK_ANALYSIS_TIMEOUT=600

# Concurrency
MAX_CONCURRENT_SCRAPES=2
BROWSER_POOL_SIZE=1
MAX_REQUESTS_PER_SESSION=20

# Mode
SCRAPING_MODE=development  # development or production

# ============================================
# AI & ML Configuration
# ============================================
# OpenAI
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30
EMBEDDING_MODEL=text-embedding-3-small

# Semantic Analysis
SEMANTIC_ANALYSIS_ENABLED=true
SEMANTIC_THRESHOLD=0.7
KEYWORD_WEIGHT=0.4
SEMANTIC_WEIGHT=0.6

# Generic Keyword Filter
ENABLE_GENERIC_KEYWORD_FILTER=true
GENERIC_KEYWORD_WEIGHT=0.3

# ============================================
# Rate Limiting
# ============================================
MAX_REQUESTS_PER_MINUTE=60
MAX_BULK_COMPETITORS=100

# ============================================
# Report Storage
# ============================================
REPORTS_DIR=/app/reports
MAX_REPORT_AGE_DAYS=30

# ============================================
# Feature Flags
# ============================================
ENABLE_AI_ANALYSIS=true
ENABLE_SEMANTIC_MATCHING=true

# ============================================
# Database (Optional - Phase 2)
# ============================================
# DATABASE_URL=postgresql://user:password@localhost:5432/scf_db

# ============================================
# NOTES
# ============================================
# - All scraping is 100% self-hosted (no external paid services)
# - Browser Pool uses Playwright with stealth mode
# - Advanced Scraper has anti-bot evasion built-in
# - Basic HTTP has SSL fallback and UA rotation
# - Only external service required: OpenAI API for AI summaries
