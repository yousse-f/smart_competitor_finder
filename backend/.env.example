# Smart Competitor Finder - Backend Environment Variables
# Copy this file to .env and fill in your values

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# ScraperAPI Configuration (Optional - for advanced scraping)
SCRAPERAPI_KEY=your_scraperapi_key_here

# Application Settings
APP_ENV=production
DEBUG=False
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_super_secret_key_here_minimum_32_characters

# CORS Settings (adjust for your domain)
ALLOWED_ORIGINS=http://localhost:3000,http://smart_competitor.youssef-ben.com,https://smart_competitor.youssef-ben.com

# Database (Optional - for future features)
# DATABASE_URL=postgresql://user:password@localhost:5432/scf_db

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_BULK_COMPETITORS=100

# Scraping Settings
SCRAPING_TIMEOUT=60
MAX_CONCURRENT_SCRAPES=5
USER_AGENT_ROTATION=true

# Report Storage
REPORTS_DIR=/app/reports
MAX_REPORT_AGE_DAYS=30

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_SEMANTIC_MATCHING=true
ENABLE_PROXY_FALLBACK=true
